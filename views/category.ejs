    <div class="modal-pay">
        <div class="pay-header">
            <h3>PAYMENT COMPLETED</h3>
            <img src="/images/check.png" width="128px" style="margin: 0 auto;" height="128px" alt="" srcset="">
        </div>
    </div>
    <!-- pop up for each categories -->
    <div class="modal">
        <div class="header">
            <!-- <h2>Fruits and Vegitables</h2> -->
            <label for="btn"></label>
        </div>
        <button type="button" id="modal-close-btn" class="modal-close-btn"><strong>X</strong></button>

        <div class="category-items">
            <% items.forEach((item)=>{ %>
                <% item.itemcategory=item.itemcategory.split(' ').join('_') %>
                        <div class="sub-cat-item">
                            <span class="<%= item.itemcategory %>"></span>
                            <p class="item-name">
                                <%= item.itemname %>
                            </p>
                            <span class="item-price">
                                $<%= item.itemPrice %>
                            </span>
                            <span>/each</span>
                        </div>
                        <% }) %>
        </div>
        <hr class="bar">
        <p class="selected-items"></p>
    </div>

    
